<style>
  img {
    width: 100%;
    height: 80%;
    position: relative;
    top: 0;
    background-size: cover;
    overflow: hidden;
    margin: 0;
  }

  .container {
    position: relative;
  }

  .content {
    width: 50rem;
    height: 40rem;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #0094d6;
    overflow: hidden;
    border-radius: 0 0 30px 0;
  }
</style>
